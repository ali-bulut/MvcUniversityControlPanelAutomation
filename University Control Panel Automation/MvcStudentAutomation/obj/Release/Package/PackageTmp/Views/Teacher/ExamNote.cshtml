@using EntityLayer.Models.ViewModel
@model TeacherLessonViewModel
@using MvcStudentAutomation.Resources
@{

    ViewBag.Title = "Sınav Notları";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/jquery-3.2.1.min.js"></script>
<script src="~/Scripts/jquery.session.js"></script>

<script>
    $(document).ready(function () {
        $("#Lesson").change(function () {
            var lesson_id = $("#Lesson option:selected").val();
            var StudentName = $("#StudentName");
            StudentName.empty();
            var ExamForm = $("#ExamForm");
            ExamForm.css("display", "none");
            if (lesson_id != null && lesson_id != "") {
                $.ajax({
                    type: "POST",
                    url: "/Teacher/BringStudents",
                    dataType: "JSON",
                    data: { lesson_id: lesson_id },

                    success: function (students) {
                        var student = $("#students");
                        var exam1 = $("#exam1");
                        var exam2 = $("#exam2");
                        student.empty();
                        student.append($('<option selected disabled></option>').val("a").html("Öğrenci Numarasını Seçiniz"));
                        $.each(students, function (index, student) {
                           
                            $("#students").append($('<option/>', {
                                value: student.StudentNumber,
                                text: student.StudentNumber
                            }));
                        });
                    },
                    error: function (error) {
                        console.log(error);
                        alert("hata");
                    },
                    beforeSend: function () {

                    },
                    complete: function () {

                    }
                });
            }
        });

        $("#students").change(function () {
            var ID = $("#students option:selected").val();
            $("#ExamForm").show();
            if (ID != null && ID != "") {
                $.ajax({
                    type: "POST",
                    url: "/Teacher/BringStudentName",
                    dataType: "JSON",
                    data: { ID: ID },

                    success: function (studentName) {
                        var StudentName = $("#StudentName");
                        StudentName.empty();

                        $.each(studentName, function (index, name) {
                            $("#StudentName").text(name.Name + " " + name.Surname);
                        });
                    },
                    error: function (error) {
                        console.log(error);
                        alert("hata");
                    },
                    beforeSend: function () {

                    },
                    complete: function () {

                    }
                });

                
            }
        });

        $("#students").change(function () {
            var ID = $("#students option:selected").val();
            $.session.set("LessonID", ID);
            $("#ExamForm").show();
            if (ID != null && ID != "") {
                
                $.ajax({
                    type: "POST",
                    url: "/Teacher/BringExamPoint",
                    dataType: "JSON",
                    data: { ID: ID },

                    success: function (students) {
                        var student = $("#students");
                        var exam1 = $("#exam1");
                        var exam2 = $("#exam2");
                        $.each(students, function (index, student) {
                            if (student.Exam1 != null && student.StudentNumber == parseInt(ID)) {
                                exam1.val(student.Exam1);
                                    exam1.attr("disabled", true);
                            }
                            else {
                                exam1.val("");
                                exam1.attr("disabled", false);
                            }
                            if (student.Exam2 != null && student.StudentNumber == parseInt(ID)) {
                                exam2.val(student.Exam2);
                                exam2.attr("disabled", true);
                            }
                            else {
                                exam2.val("");
                                exam2.attr("disabled", false);
                            }
                        });
                    },
                    error: function (error) {
                        console.log(error);
                        alert("hata");
                    },
                    beforeSend: function () {

                    },
                    complete: function () {

                    }
                });

            }
        });


    });
</script>
